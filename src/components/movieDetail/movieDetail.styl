.movie-detail-popup
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: lighten(#CCCCFF, 80%)
  overflow-y: auto
  z-index: 1001
  .header
    display: flex
    position: fixed
    top: 0
    left: 0
    right: 0
    height: 1rem
    padding-left: .4rem
    padding-right: .4rem
    justify-content: space-between
    align-items: center
    color: #fff
    background-color: #999933
    .iconfont
      font-size: 1.6em
    span
      font-size: .5rem
  .picture-wrap
    display: flex
    justify-content: center
    align-items: center
    margin-top: 1rem
    height: 45vh
    padding: 2vh 0 4vh
    background-color: #999933
    img
      height: 100%
  .movie-info
    display: flex
    padding: .4rem
    justify-content: space-between
    .left
      .title
        font-size: .7rem
        font-weight: blod
        color: #000
        margin-bottom: .4rem
      .info
        font-size: .3rem
        color: #999
    .right
      &.evalute
        margin-top: .2rem
        width: 2.4rem
        height: 2.4rem
        padding: .2rem
        text-align: center
        background-color: #fff
        box-shadow: 0 0 10px #999
        .title
          font-size: .3rem
          color: #ccc
        .average
          margin: .12rem auto
          font-size: .6rem
          color: #000
        .info
          font-size: .3rem
          color: #ccc
  .btns
    display: flex
    justify-content: space-between
    margin: .2rem auto
    padding: .4rem
    .btn
      display: flex
      justify-content: center
      align-items: center
      height: 1.2rem
      font-size: .5rem
      font-weight: bold
      color: #FFCC33
      border-radius: 5px
      border: 1px solid #FFCC33
      user-select: none
      &:active
        color: #fff
        background-color: lighten(#FFCC33, 40%)
        border: 1px solid lighten(#FFCC33, 40%)
    .want
      flex: 6
      margin-right: .2rem
      width: 2rem
    .saw
      flex: 18
      width: 4rem
      span
        margin-right: .2rem
  .buy-ticket
    display: flex
    justify-content: space-between
    align-items: center
    padding: .4rem
    font-size: .5rem
    font-weight: bold
    color: #000
    border-top: 1px solid #f1f1f1
    border-bottom: 1px solid #f1f1f1
    .iconfont
      font-size: 1.1em
      &.icon-dianyingpiao
        margin-right: .3rem
        color: #999
      &.icon-previewright
        color: #ccc
  .introduce
    padding: .4rem
    .title
      font-size: .4rem
      color: #999
      margin-bottom: .2rem
    .intro-content
      height: 2.4rem
      line-height: .6rem
      font-size: .42rem
      word-break: break-word;
      color: #333
      .show-more
        color: green
  .casts-wrap
    padding: .4rem
    .title
      font-size: .4rem
      color: #999
    .casts
      max-width: 100vw
      overflow-x: auto
      .casts-list
        display: flex
        flex-wrap: nowrap
        .photo-wrap
          display: flex
          flex-direction: column
          padding: .2rem .2rem .2rem 0
          img
            width: 3rem
          .info
            padding: .2rem 0
            text-align: center
            font-size: .3rem
